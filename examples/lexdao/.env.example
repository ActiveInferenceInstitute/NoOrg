# LexDAO Governance Workflow - Environment Configuration
# Copy this file to .env and update with your actual values

# =============================================================================
# OPENAI CONFIGURATION
# =============================================================================
# Required: Your OpenAI API key for LLM agent functionality
# Get your key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# Optional: OpenAI API settings (defaults shown)
OPENAI_MODEL=gpt-4o
OPENAI_TEMPERATURE=0.7
OPENAI_MAX_TOKENS=2000

# =============================================================================
# OUTPUT CONFIGURATION
# =============================================================================
# Directory where workflow outputs will be saved (relative to project root)
OUTPUT_DIR=../../output

# Optional: Custom output subdirectory name
# OUTPUT_SUBDIR=lexdao-governance-demo

# =============================================================================
# WORKFLOW SETTINGS
# =============================================================================
# Timeout for workflow execution in milliseconds (default: 5 minutes)
WORKFLOW_TIMEOUT=300000

# Log level: debug, info, warn, error (default: info)
LOG_LEVEL=info

# Enable debug mode for detailed logging
DEBUG=false

# =============================================================================
# BLOCKCHAIN CONFIGURATION (SIMULATED)
# =============================================================================
# Ethereum network RPC URL (for real blockchain integration)
# ETHEREUM_RPC_URL=https://mainnet.infura.io/v3/YOUR_PROJECT_ID

# LexDAO Aragon Agent contract address
LEXDAO_AGENT_ADDRESS=0x97103fda00a2b47EaC669568063C00e65866a633

# Default blockchain network
BLOCKCHAIN_NETWORK=ethereum

# =============================================================================
# VISUALIZATION SETTINGS
# =============================================================================
# Visualization DPI for PNG outputs (default: 300)
VIZ_DPI=300

# Animation FPS for GIF outputs (default: 4)
ANIMATION_FPS=4

# Enable/disable specific visualization types
ENABLE_MEMBERSHIP_VIZ=true
ENABLE_TREASURY_VIZ=true
ENABLE_VOTING_VIZ=true
ENABLE_PROPOSAL_VIZ=true
ENABLE_ACTIVITY_VIZ=true

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
# Enable TypeScript checking during development
TSC_CHECK=true

# Enable ESLint during development
ESLINT_CHECK=true

# Enable hot reload for development
HOT_RELOAD=false

# =============================================================================
# TESTING SETTINGS
# =============================================================================
# Test timeout in milliseconds (default: 30000)
TEST_TIMEOUT=30000

# Enable test coverage reporting
COVERAGE_ENABLED=true

# Coverage threshold percentage (default: 80)
COVERAGE_THRESHOLD=80

# =============================================================================
# PERFORMANCE SETTINGS
# =============================================================================
# Maximum number of concurrent workflow stages (default: 3)
MAX_CONCURRENT_STAGES=3

# Memory limit in MB (default: 1024)
MEMORY_LIMIT=1024

# Enable performance monitoring
PERF_MONITORING=false

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
# Enable API key encryption at rest (experimental)
ENCRYPT_API_KEYS=false

# API key encryption password (if encryption enabled)
ENCRYPTION_PASSWORD=

# Enable rate limiting for API calls
RATE_LIMITING=true

# Maximum API calls per minute (default: 60)
API_RATE_LIMIT=60

# =============================================================================
# ADVANCED SETTINGS
# =============================================================================
# Custom workflow configuration file path
# WORKFLOW_CONFIG_PATH=

# Enable custom plugin loading
PLUGINS_ENABLED=false

# Plugin directory path
# PLUGIN_DIR=./plugins

# Enable experimental features
EXPERIMENTAL_FEATURES=false

# Custom user agent for API calls
USER_AGENT=LexDAO-Workflow/1.0.0

# =============================================================================
# DEBUGGING SETTINGS
# =============================================================================
# Enable verbose logging for specific modules
DEBUG_MODULES=

# Enable stack trace logging
STACK_TRACES=false

# Enable memory usage logging
MEMORY_LOGGING=false

# Log file path (if different from default)
# LOG_FILE_PATH=

# =============================================================================
# INTEGRATION SETTINGS
# =============================================================================
# Slack webhook URL for notifications (optional)
# SLACK_WEBHOOK_URL=

# Discord webhook URL for notifications (optional)
# DISCORD_WEBHOOK_URL=

# Email notifications (requires additional setup)
# EMAIL_NOTIFICATIONS=false
# SMTP_HOST=
# SMTP_PORT=
# SMTP_USER=
# SMTP_PASS=

# =============================================================================
# DATA PERSISTENCE
# =============================================================================
# Enable database persistence (experimental)
DB_ENABLED=false

# Database connection string (if enabled)
# DATABASE_URL=

# Data retention period in days (default: 30)
DATA_RETENTION_DAYS=30

# Enable data compression
COMPRESSION_ENABLED=true

# =============================================================================
# COMPLIANCE SETTINGS
# =============================================================================
# Enable audit logging for compliance
AUDIT_LOGGING=true

# Data anonymization for privacy
ANONYMIZE_DATA=false

# Geographic data restrictions
# GEO_RESTRICTIONS=

# =============================================================================
# SAMPLE VALUES FOR TESTING
# =============================================================================
# These are sample values that can be used for testing without real APIs

# Sample OpenAI API key (for testing only - will not work)
# OPENAI_API_KEY=sk-test-sample-key-replace-with-real-key

# Sample blockchain addresses for testing
SAMPLE_MEMBER_ADDRESS=0x742d35Cc6635C0532d6Cc6B8C2E7E7F0c5c5B5d8
SAMPLE_PROPOSAL_ID=0x1234567890abcdef

# Sample data generation settings
SAMPLE_DATA_SIZE=50
SAMPLE_TIME_RANGE_DAYS=365
